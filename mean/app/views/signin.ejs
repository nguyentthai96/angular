<!DOCTYPE html>
<html>
  <head>
    <title><%=title %></title>
    <link rel="stylesheet" type="text/css" href="/lib/bootstrap/dist/css/bootstrap.min.css">
  </head>
  <body>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Sign In</h3>
          </div>
          <div class="panel-body">
            <% for(var i in messages) { %>
            <div class="flash"><%= messages[i] %></div>
            <% } %>
            <form action="/signin" method="post" role="form">
              <fieldset>
                <div class="form-group">
                  <label>Username:</label>
                  <input type="text" name="username" class="form-control" />
                </div>
                <div class="form-group">
                  <label>Password:</label>
                  <input type="password" name="password" class="form-control" />
                </div>
                <div class="form-group">
                  <input type="submit" value="Sign In" class="btn btn-lg btn-success btn-block" />
                </div>
                <div class="form-group">
                  <label>OR</label>
                </div>
                <a href="/oauth/facebook" class="btn btn-lg btn-success btn-block">Sign in with Facebook</a>
                <a href="/oauth/twitter" class="btn btn-lg btn-success btn-block">Sign in with Twitter</a>
                <a href="/oauth/google" class="btn btn-lg btn-success btn-block">Sign in with Google</a>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div><!--  /.row -->
  </div><!--  /.container -->
</body>
</html>